    <header>
      <div class="nav container">
          <div class="logo">
              <a href="/">
                <h2>AUTH</h2>
              </a>
          </div>
          <div class="links">
              <ul>
                <%if(user){ %>
                  <li>
                    <span><%= user.email %></span>
                  </li>
                  <li>
                    <a href="/logout">logout</a>
                </li>
                  <% }else{ %>
                  <li>
                      <a href="/login">Login</a>
                  </li>
                  <li>
                      <a href="/sighup">Sign up</a>
                  </li>
                  <% } %>
              </ul>
          </div>
      </div>
